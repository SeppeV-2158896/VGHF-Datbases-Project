<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml">

    <Label text="Game Details" styleClass="title"/>

    <Label text="Title"/>
    <TextField fx:id="titleField"/>

    <Label text="Release Date"/>
    <TextField fx:id="releaseDateField"/>

    <Label text="Genre"/>
    <TextField fx:id="genreField"/>

    <Label text="Owner"/>
    <TextField fx:id="ownerField"/>

    <Label text="Home Base"/>
    <TextField fx:id="homeBaseField"/>

    <Label text="Current Location"/>
    <TextField fx:id="currentLocationField"/>

    <HBox spacing="10">
        <Button text="Save" onAction="#saveGame"/>
        <Button text="Delete" onAction="#deleteGame"/>
    </HBox>

</VBox>
