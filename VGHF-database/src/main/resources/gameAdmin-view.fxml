<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      style="-fx-padding: 0 10 10 10;"
      prefWidth="400" prefHeight="400">
 <!-- style="-fx-padding: boven rechts onder links;" -->

    <Label text="Game Details" styleClass="title" style="-fx-font-size: 24pt; -fx-font-weight: bold;"/>

    <Label text="Title"/>
    <TextField fx:id="titleField"/>

    <Label text="Release Date"/>
    <TextField fx:id="releaseDateField"/>

    <Label text="Genre"/>
    <TextField fx:id="genreField"/>

    <Label text="Owner"/>
    <Button fx:id="ownerButton" onAction="#editOwner"/>

    <Label text="Home Base"/>
    <Button fx:id="homeBaseButton" onAction="#editHomeBase"/>

    <Label text="Current Location"/>
    <Button fx:id="currentLocationButton" onAction="#editCurrentLocation"/>

    <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
        <Button text="Save" onAction="#saveGame"/>
        <Button text="Delete" onAction="#deleteGame"/>
    </HBox>

</VBox>
