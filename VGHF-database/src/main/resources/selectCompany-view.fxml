<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            style="-fx-padding: 0 10 10 10;"
            prefHeight="400.0" prefWidth="600.0">

    <Label text="Company"/>
    <TextField fx:id="companyField" onKeyReleased="#handleSearch"/>

    <TableView fx:id="table" onMouseClicked="#handleMouseClick"/>

    <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
        <Button fx:id="addButton" text="Add" onAction="#addCompany"/>
        <Button fx:id="deleteButton" text="Delete" onAction="#deleteCompany"/>
        <Button fx:id="confirmButton" text="Confirm" onAction="#confirmSelectedCompany" alignment="BASELINE_RIGHT"/>
    </HBox>

</VBox>
