<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

    <VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml">
        <style>
            -fx-background-color: #f4f4f4;
            -fx-padding: 20;
        </style>

        <Label text="You're not yet logged in.">
            <style>
                -fx-font-size: 16px;
                -fx-font-weight: bold;
                -fx-text-fill: #333333;
            </style>
        </Label>

        <Button text="Register" onAction="#handleRegisterButton" fx:id="registerButton">
            <style>
                -fx-background-color: #4CAF50;
                -fx-text-fill: white;
                -fx-font-size: 14px;
                -fx-padding: 10 20;
            </style>
        </Button>

        <Button text="Login" onAction="#handleLoginButton" fx:id="loginButton">
            <style>
                -fx-background-color: #4CAF50;
                -fx-text-fill: white;
                -fx-font-size: 14px;
                -fx-padding: 10 20;
            </style>
        </Button>

    </VBox>
