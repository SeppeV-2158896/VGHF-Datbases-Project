<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            style="-fx-padding: 0 10 10 10;"
            prefHeight="400.0" prefWidth="600.0">

    <Label text="Address"/>
    <TextField fx:id="addressField" onKeyReleased="#handleSearch"/>

    <TableView fx:id="table" onMouseClicked="#handleMouseClick"/>

    <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
        <Button fx:id="addButton" text="Add" onAction="#addLocation"/>
        <Button fx:id="deleteButton" text="Delete" onAction="#deleteLocation"/>
        <Button fx:id="confirmButton" text="Confirm" onAction="#confirmSelectedLocation" alignment="BASELINE_RIGHT"/>
    </HBox>
</VBox>
