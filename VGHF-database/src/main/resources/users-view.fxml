<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" prefWidth="1920">
    <children>
        <VBox AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.leftAnchor="0">
            <AnchorPane>
                <TextField fx:id="nameQueryField"  AnchorPane.topAnchor="10.0" AnchorPane.rightAnchor="810.0" AnchorPane.leftAnchor="190"/>
                <TextField fx:id="locationQueryField"  AnchorPane.topAnchor="50.0" AnchorPane.rightAnchor="810.0" AnchorPane.leftAnchor="190"/>
                <Text fx:id="nameText" text="Name: " AnchorPane.topAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.leftAnchor="120"/>
                <Text fx:id="locationText" text="Location: " AnchorPane.topAnchor="50.0" AnchorPane.rightAnchor="10.0" AnchorPane.leftAnchor="120"/>
                <Button fx:id="submitButton" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10" prefWidth="100"/>
                <Button fx:id="editButton" AnchorPane.topAnchor="10" AnchorPane.rightAnchor="650" prefWidth="150"/>
                <Button fx:id="loansButton" AnchorPane.topAnchor="10" AnchorPane.rightAnchor="490" prefWidth="150"/>
                <Button fx:id="addButton" AnchorPane.topAnchor="10" AnchorPane.rightAnchor="650" prefWidth="150"/>
            </AnchorPane>
            <AnchorPane>
                <TableView fx:id="userTableView" onMouseClicked="#handleItemSelected" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10.0"/>
            </AnchorPane>
        </VBox>
    </children>
</AnchorPane>
